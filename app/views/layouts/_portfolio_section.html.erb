<!-- Contact Section -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Contact</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <form name="sentMessage" id="contactForm" novalidate>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button type="submit" class="btn btn-xl">Send Message</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>



<!-- PORTFOLIO SECTION -->
<section class="portfolio-container" id="portfolio">
	<div class="inner-wrapper">
		<h3>Work</h3>
		<div class="little-line light"></div>
		<div class="work-items">

		<% unless @projects.present? %>
			<p>Looks like you don't have any projects, yet!</p>
		<% end %>

		<% @projects.each do |project| %>
			<div class="portfolio-item">
				<div class="portfolio-image">
					<%= image_tag project.screenshot %>
				</div> <!-- /.portfolio-image -->
				<div class="portfolio-text">
					<h4><%= project.title %></h4>

					<% project.languages.all.each do |lang| %>
						<% unless lang.lang_name.nil? || lang.lang_name.empty? %>
							<div class="tech"><%= lang.lang_name %></div>
						<% end %>
					<% end %>

					<p><%= project.description.html_safe %></p>

					<!-- Page Specific buttons -->
					<% if current_page?(projects_path) %>
						<p>Active on homepage?: <strong><%= project.active %></strong></p>
					<%= link_to "Edit", edit_project_path(project), class: "button submit-button" %>
					<%= link_to "Delete", project_path(project), class: "button submit-button", method: :delete, data: { confirm: "Are you sure?"} %>
					<% else %>
						<%= link_to "View Live", project.url, class: "viewLive button" %>
					<% end %>

				</div> <!-- /.portfolio-text -->
			</div> <!-- /.portfolio-item -->
		<% end %> <!-- /.each -->
		</div> <!-- /.work-items -->
	</div> <!-- /.inner-wrapper -->
</section> <!-- /.portfolio-container
